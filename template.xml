<Container>
  <Name>SIGMA</Name>
  <Repository>localbuild/sigma</Repository>
  <Registry></Registry>
  <Network>bridge</Network>
  <MyIP></MyIP>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/your-org/sigma</Support>
  <Project>https://github.com/your-org/sigma</Project>
  <Overview>This container provides a secure web interface for digitally signing media and communicating via GPG encryption. Built using Rust and Elm.</Overview>
  <Category>Security:Tools, Network:Utilities, Productivity</Category>
  <WebUI>http://[IP]:[PORT:34998]</WebUI>
  <Icon>https://raw.githubusercontent.com/your-org/sigma/main/logo.png</Icon>
  <ExtraParams></ExtraParams>
  <PostArgs></PostArgs>
  <CPUset></CPUset>
  <Date></Date>
  <DonateText></DonateText>
  <DonateLink></DonateLink>
  <Requires></Requires>
  <Config Name="AppData Config Path" Target="/app/data" Default="/mnt/user/appdata/SIGMA" Mode="rw" Description="Container persistent data location." Type="Path" />
  <Config Name="Web Port" Target="34998" Default="34998" Mode="tcp" Description="Frontend/backend web access port." Type="Port" />
  <Environment Name="SIGMA_ENV" Default="production" Description="Set the runtime environment." />
  <Environment Name="SIGMA_PORT" Default="34998" Description="Set the backend listening port." />
</Container>
